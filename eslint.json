{
    "extends": "google",

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
           "experimentalObjectRestSpread": true
        }
    },

    "rules": {
        "semi": 0,
        "max-len": ["error", 220],
        "eol-last": "error",
        "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
        "no-console": 2,
        "no-undef": 2,
        "no-debugger": 2,
        "camelcase": 0,
        "linebreak-style": 0,
        "func-call-spacing": 0,
        "keyword-spacing": 0,
        "curly": 0,
        "padded-blocks": "off"
    },

    "globals": {
      "describe": true,
      "beforeEach": true,
      "beforeAll": true,
      "test": true,
      "expect": true,
      "document": true,
      "window": true,
      "jest": true,
      "Event": true,
      "Promise": true,
      "require": true,
      "Map": true,
      "getComputedStyle": true,
      "URLSearchParams": true,
      "history": true,
      "Element": true,
      "HTMLElement": true,
      "DOMParser": true
    }
}
